{
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/healthz",
      "destination": "/api"
    },
    {
      "source": "/readyz",
      "destination": "/api"
    },
    {
      "source": "/((?!api|healthz|readyz).*)",
      "destination": "/api"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}